<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Info"
      internalLogFile="c:\temp\internal-nlog-AspNetCore.txt">

    <extensions>
        <add assembly="NLog.Web.AspNetCore"/>
    </extensions>

    <targets>
        <target name="c" xsi:type="ColoredConsole" layout="${date} ${pad:padding=5:inner=${uppercase:${level}}} ${logger:wrapline=80}${newline}${pad:padding=4:inner=}${message}${newline}">
            <highlight-row condition="level == LogLevel.Trace" foregroundColor="DarkGray" />
            <highlight-row condition="level == LogLevel.Debug" foregroundColor="Gray" />
            <highlight-row condition="level == LogLevel.Info" foregroundColor="White" />
            <highlight-row condition="level == LogLevel.Warn" foregroundColor="Yellow" />
            <highlight-row condition="level == LogLevel.Error" foregroundColor="Red" backgroundColor="DarkRed" />
            <highlight-row condition="level == LogLevel.Fatal" foregroundColor="Magenta" backgroundColor="DarkRed" />
            <highlight-word regex="TRACE" foregroundColor="DarkGray" />
            <highlight-word regex="DEBUG" foregroundColor="Gray" />
            <highlight-word regex="INFO" foregroundColor="Green" />
            <highlight-word regex="WARN" foregroundColor="Yellow" />
            <highlight-word regex="ERROR" foregroundColor="Red"  />
            <highlight-word regex="FATAL" foregroundColor="Magenta" />
        </target>
    </targets>

    <rules>
        <!--All logs, including from Microsoft-->
        <logger name="*" minlevel="Trace" writeTo="c" />

        <!--Output hosting lifetime messages to console target for faster startup detection -->
        <logger name="Microsoft.Hosting.Lifetime" minlevel="Info" writeTo="c" final="true" />

        <!--Skip non-critical Microsoft logs and so log only own logs (BlackHole) -->
        <logger name="Microsoft.*" maxlevel="Info" final="true" />
        <logger name="System.Net.Http.*" maxlevel="Info" final="true" />

        <logger name="*" minlevel="Trace" writeTo="c" />
    </rules>
</nlog>